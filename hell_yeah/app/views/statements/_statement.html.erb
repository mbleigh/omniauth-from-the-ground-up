<section class='statement'>
  <h1><%= statement.text %></h1>
  <ul class='voters'>
    <% for voter in statement.users %>
      <li><%= link_to image_tag("http://tweetimag.es/i/#{voter.screen_name}_m"), "http://twitter.com/#{voter.screen_name}", :target => '_blank' %>
    <% end %>
  </ul>
  <%= link_to "Hell Yeah!", new_statement_vote_path(statement) %>
</section>
